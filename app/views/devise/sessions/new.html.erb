<%= render "shared/header"%>
<div class="sign-in-page d-flex justify-content-center align-items-center">
  <div class="card">
    <div class="card-header">
      ログイン
    </div>

    <div class="card-body">
      <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
        </div>

        <div class="sign-in__submit-btn">
          <%= f.submit "ログイン", class: "btn btn-block text-white" %>
        </div>
      <% end %>

      <%= link_to 'ゲストログイン(閲覧用)',  users_guest_sign_in_path, method: :post, class: "btn btn-block btn-warning mt-3" %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
<%= render "shared/footer" %>